<!DOCTYPE html>
<html>
	<head>
		<title>Profile</title>
		<% include bootstrapcss %>
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
		<style type="text/css">
		.blur {
			pointer-events: none;
			opacity: 0.3;
		}
			.nav-tabs {
				border: none;
			}
			.twitter-profile img.fb-image-lg{
				z-index: 0;
				width: 100%;
				margin-bottom: 10px;
				height: 30vh;
			}
			.twitter-image-profile
			{
				margin: -90px 10px 20px 80px;
				z-index: 9;
				width: 20%;
			}


/*------------------------MEDIA QUERY---------------------------*/
			@media (max-width:768px){

				.twitter-profile-text>h1{
					font-weight: 700;
					font-size:16px;
				}
				.twitter-image-profile{
					margin: -45px 10px 0px 25px;
					z-index: 9;
					width: 20%;
				}

			}
		</style>
	</head>
	<body>
		<div class="row" >
			<% include home-header %>
		</div>
		<div class="container-fluid" id="main" style="width: 90%">
			<div class="row">
			<div class="com-xs-12">
				<div class="twitter-profile">
					<img align="left" class="fb-image-lg" src="images/cover.jpg"/>
					<img align="left" class="twitter-image-profile img-thumbnail"
								src="<%= user.imgpath %>" alt="Profile image example"/>
					<ul class="nav nav-tabs">
						<li class="active2 tweets">
							<a href="#tab_default_3" id="tweets" data-toggle="tab">
								Tweets
								<p id="tweetsCount" style="text-align: center;">
									<%= user.tweetcount %>
								</p>
							</a>
						</li>
						<li class="following">
							<a href="#tab_default_1" id="following" data-toggle="tab">
							Following
							<p id="followingCount" style="text-align: center;">
								<%= user.followingcount %>
							</p>
						</a>
						</li>
						<li class="followers">
							<a href="#tab_default_2" id="followers" data-toggle="tab">
								Followers
								<p id="followersCount" style="text-align: center;">
									<%= user.followercount %>
								</p>
							</a>
						</li>
						<li class="editProfile" style="float: right;" id="editProfile">
							<a href="" data-toggle="tab" onclick="editProfile();">
								Edit Profile
								<p> </p>
							</a>
						</li>
					</ul>
				</div>
			</div>
			</div>
			<div class="row">
				<div class="col-md-4" style="margin: 0;padding: 0">
					<div class="row" id="userInfo">
						<div class="col-xs-12" >
							<div class="panel panel-info hidden-sm hidden-xs">
								<div class="panel-body">
									<h4 style="text-align: center;">
										<span class="glyphicon glyphicon-user"></span>
										<b><%= name %></b>
									</h4>
									<p style="text-align: center;">
										<span class="glyphicon glyphicon-envelope"></span>
										<%= email %>
										</p>
									<p style="text-align: center;">
										<span class="glyphicon glyphicon-calendar"></span>
										<%= birthdate %>
									</p>
									<p style="text-align: center;">
										<span class="glyphicon glyphicon-briefcase"></span>
										<%= bio %>
									</p>
									<p style="text-align: center;">
										<span class="glyphicon glyphicon-map-marker"></span>
										<%= location %>
									</p>
								</div>
							</div>
							<form id="editProfileForm" class="form-horizontal" role="form" action="/editprofile"
													method="post" enctype="multipart/form-data">
								<div class="form-group">
									<div class="col-xs-10">
										<input type="file" class="form-control" placeholder="profilepicture" name="profilepicture">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input class="form-control" type="text" placeholder="Name" name="name" value="<%= name %>">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input class="form-control" type="text" placeholder="Bio" name="bio" value="<%= bio %>">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input class="form-control" type="email" placeholder="Email" name="email" value="<%= email %>">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input class="form-control" type="" placeholder="Location" name="location" value="<%= location %>">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input class="form-control" type="date" placeholder="Birthdate" name="dob" value="<%= birthdate %>">
									</div>
								</div>
								<div class="form-group">
									<div class="col-xs-10">
										<input type="submit" class="btn btn-primary" value="Save Changes">
										<span></span>
										<input type="reset" class="btn btn-default" value="Cancel" onclick="cancel();">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-md-8" style="position: relative;top: -60px">
					<div class="row showresult" id="result"></div>
				</div>
			</div>
		</div>

		<% include bootstrapjs %>
		<script type="text/javascript" src="javascript/onready.js"></script>
		<script type="text/javascript" src="javascript/searchuser.js"></script>
		<script type="text/javascript" src="javascript/tweet.js"></script>
		<script type="text/javascript" src="javascript/like.js"></script>
		<script type="text/javascript" src="javascript/fixheader.js"></script>
		<script type="text/javascript" src="javascript/showfollowersfollowing.js"></script>
		<script type="text/javascript" src="javascript/followunfollow.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$("#editProfileForm").hide();
				$(".panel-info").show();
				$("#editProfileForm").focus();
				$('#tweets').trigger('click');
			});
			function editProfile() {
				$("#editProfileForm").show();
				$(".panel-info").hide();
				$( ".twitter-profile" ).blur();
				$("#editProfileForm").focus();
				$( "#editProfileForm" ).css( "opacity", "1" );
			}
			function cancel() {
				$("#editProfileForm").hide();
				$(".panel-info").show();
				$( "#main" ).css( "opacity", "1" );
			}
		</script>
	</body>
</html>
