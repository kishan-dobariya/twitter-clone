<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <% include bootstrapcss %>
  </head>
  <body>
    <% include home-header %>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Profile</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="ProfilePicture" src=<%= imgpath %> class="img-circle img-responsive"> </div>
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Name</td>
                        <td><%= name %></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><%= email %></td>
                      </tr>
                      <tr>
                        <td>Date of Birth</td>
                        <td><%= birthdate %></td>
                      </tr>
                      <tr>
                        <tr>
                          <td>Bio</td>
                          <td><%= bio %></td>
                        </tr>
                        <tr>
                          <td>Location</td>
                          <td><%= location %></td>
                        </tr>
                        <tr>
                          <td>Followers</td>
                          <td><%= followers %></td>
                        </tr>
                        <tr>
                          <td>Followings</td>
                          <td><%= folowings %></td>
                        </tr>
                        <tr id="button">
                          <button class="btn btn-primary" id="follow_unfollow" value="<%= username %>"><%= status %></button>
                        </tr>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3">
          <div>
            <% for( var i=0; i < tweets.length; i++) {%>
              <div style="padding: 15px;margin: 5px;">
                <div class="row row-eq-height" style="background-color: lavender;border-radius: 10px;">
                  <div class="col-md-2" style="margin: 5px;" align="center">
                    <img class="img-circle img-responsive" alt="ProfilePicture"
                      src=<%= imgpath %>>
                  </div>
                  <div class="col-md-8">
                    <span style="position: relative;top: 25px;right: 20px;" class="align-middle">
                      <b><%= tweets[i].username %></b>
                    </span>
                  </div>
                </div>
                <div class="row row-eq-height" style="border: 2px solid lavender;padding: 10px;
                         border-radius: 10px;">
                  <p><%= tweets[i].tweet %></p>
                  <div class="row row-eq-height">
                    <div class="col-md-4">
                      <button class="btn bt">
                        Like
                      </button>
                    </div>
                  </div>
                </div>
              </div><br>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% include bootstrapjs %>
    <script type="text/javascript" src="javascript/followunfollow.js"></script>
    <script type="text/javascript" src="javascript/onready.js"></script>
    <script type="text/javascript" src="javascript/searchuser.js"></script>
  </body>
</html>
